{
  "name": "win-tesseract",
  "version": "1.0.0",
  "description": "tesseract in electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -w"
  },
  "keywords": [
    "tesseract"
  ],
  "author": "Ajanuw",
  "license": "MIT",
  "devDependencies": {
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5"
  },
  "build": {
    "appId": "com.ajanuw.tesseract",
    "productName": "Tesseract",
    "copyright": "ajanuw",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "tesseract.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}